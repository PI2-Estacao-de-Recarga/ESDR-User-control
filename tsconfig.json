{
    "compilerOptions": {
      "rootDir": "src",
      "target": "ES2017",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "module": "commonjs",
      "allowJs": true,
      "outDir": "dist",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "strictPropertyInitialization": false,
      "skipLibCheck": true
    },
    "exclude": ["dist"]
  }